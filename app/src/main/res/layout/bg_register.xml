<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/img"
    tools:context=".ui.user.RegisterActivity"
    tools:ignore="MissingDefaultResource"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="15dp">

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:importantForAccessibility="no"
            android:scaleType="fitXY"
            android:src="@mipmap/img"
            tools:ignore="ImageContrastCheck" />
    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="25dp"
        android:hint="请输入账号"
        android:textSize="12sp"
        android:maxLength="30"
        android:background="@drawable/bg_et_wb"
        android:padding="20dp"
        android:textColor="@color/red"
        android:textColorHint="@color/red"
        tools:ignore="Autofill,LabelFor,RtlSymmetry,SpeakableTextPresentCheck,TextFields,VisualLintTextFieldSize" />

    <EditText
        android:id="@+id/et_pass"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="25dp"
        android:hint="请输入密码"
        android:background="@drawable/bg_et_wb"
        android:padding="20dp"
        android:textSize="12sp"
        android:inputType="textPassword"
        android:maxLength="30"
        android:textColor="@color/red"
        android:textColorHint="@color/red"
        tools:ignore="Autofill,LabelFor,RtlSymmetry,SpeakableTextPresentCheck,TextFields,VisualLintTextFieldSize" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="25dp"
        android:hint="请输入邮箱"
        android:textSize="12sp"
        android:background="@drawable/bg_et_wb"
        android:padding="20dp"
        android:maxLength="30"
        android:textColor="@color/red"
        android:textColorHint="@color/red"
        tools:ignore="Autofill,LabelFor,RtlSymmetry,SpeakableTextPresentCheck,TextFields,VisualLintTextFieldSize" />

    <Button
        android:id="@+id/bt_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/bg_et_wb"
        android:padding="10dp"
        android:text="注册"
        android:textAllCaps="false"
        android:textSize="10sp"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/deng_lu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="25dp"
        android:text="登录"
        android:textColor="@android:color/white"
        android:textSize="13sp"
        android:textStyle="bold" />

</LinearLayout>